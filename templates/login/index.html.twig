{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
<div class="login">	
	<form class="form" action="{{ path('app_login') }}" method="post">
		<label for="username">Email:</label>
		<input class="mt-2 mb-3 form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>

		<label for="password">Mot de passe:</label>
		<input class="mt-2 mb-3 form-control"
		type="password" id="password" name="_password"/>

		{# If you want to control the URL the user is redirected to on success
		        <input type="hidden" name="_target_path" value="/account"/> #}

		<button class="btn btn-primary mt-3" type="submit">Se connecter</button>
	</form>
</div>	
{% endblock %}
