{% extends 'base.html.twig' %}

{% block title %}Franchise index{% endblock %}

{% block body %}
    <h1>Franchise index</h1>
<div class="d-flex justify-content-center flex-wrap">

        {% for franchise in franchises %}
<div class="card me-3 mt-3" style="width: 18rem;">
	<div class="card-body">
		<h5 class="card-title">{{ franchise.name }}</h5>
        <h6 class="card-subtitle mb-2 text-muted">Permission globale</h6>
		<p class="card-text">Sell_drink {{ franchise.sellDrink ? 'Yes' : 'No' }}</p>
		<a class="btn btn-primary" href="{{ path('app_admin_franchise_show', {'id': franchise.id}) }}">Voir les structures</a>
		<a href="{{ path('app_admin_franchise_edit', {'id': franchise.id}) }}">edit</a>
	</div>
</div>
{% endfor %}
</div>
<div class="d-flex justify-content-end me-5 mt-5"><a class="btn btn-primary" href="{{ path('app_admin_franchise_new') }}">Ajouter un partenaire</a></div>

{% endblock %}
